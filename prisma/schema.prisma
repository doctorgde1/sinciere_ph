model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  profileImage   String?
  gallery String[]
  role    UserRole @default(CLIENT)
}

enum UserRole {
  ADMIN
  CLIENT
}
